                <Ellipse x:Name="LedRb2" Grid.Row="2" Fill="Red" Height="15" Width="15"></Ellipse>
            </Grid>

            <!--Port RB3 -->
            <Grid Grid.Column="8" Grid.Row="1" Margin="0,2">
